{
  "compilerOptions": {
    "lib": ["es2022"],
    "module": "commonjs",
    "target": "es2022",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "lib",
    "declaration": true
  },
  "baseUrl": "src",
  "include": ["src"],
  "exclude": ["node_modules", "**/__tests__/*", "tests", "coverage"]
}